{
    "name": "eduardwayland.github.it",
    "version": "1.0.0",
    "main": "public/index.html",
    "author": "Eduard Wayland",
    "scripts": {
        "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
        "copy:css": "copyfiles -u 1 ./src/css/*.css public",
        "copy:js": "copyfiles -u 1 ./src/js/*.js public",
        "copy:html": "copyfiles -u 1 ./src/*.html public",
        "copy": "npm-run-all --parallel copy:*",
        "watch:assets": "onchange \"src/assets/**/*\" -- npm run copy:assets",
        "watch:css": "onchange \"src/css/*.css\" -- npm run copy:css",
        "watch:js": "onchange \"src/js/*.js\" -- npm run copy:js",
        "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
        "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
        "watch": "npm-run-all --parallel watch:*",
        "serve": "browser-sync start --server public --files public",
        "start": "npm-run-all copy --parallel watch serve",
        "build:sass": "sass --no-source-map src/sass:public/css",
        "build": "npm-run-all copy:html build:*",
        "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
        "deploy": "npm run build && gh-pages -d public -b main -m \"[Deploy] Automatic update\""
    },
    "dependencies": {
        "gh-pages": "^3.2.3",
        "postcss-cli": "^9.1.0",
        "autoprefixer": "^10.4.2",
        "cssnano": "^5.1.1",
        "sass":"^1.49.9",
        "onchange": "^7.1.0",
        "copyfiles": "^2.4.1",
        "npm-run-all": "^4.1.5",
        "browser-sync": "^2.27.7"
    }
}